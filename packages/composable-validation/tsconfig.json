{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "sourceMap": false,
    "target": "es5",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "noEmitOnError": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
